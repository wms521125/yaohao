.body {
  width: 100%;
  height: 100%;
  background: #39f;
}

.body-box {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 60rpx 50rpx 0;
  box-sizing: border-box;
}

.header {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.header-title {
  width: 220rpx;
  font-size: 48rpx;
  color: #2e3033;
  line-height: 80rpx;
}

.header-data view {
  font-size: 24rpx;
  color: #8a9199;
  line-height: 40rpx;
}

.city {
  width: 650rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #2e3033;
  background: url(http://i1.dd-img.com/assets/image/1520061117-30ebfe0e2cd76b6a-40w-40h.png) no-repeat 590rpx;
  background-size: 40rpx;
}

.num {
  width: 650rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.query {
  width: 650rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #39f;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.30);
  border-radius: 200rpx;
  color: #fff;
  margin-top: 120rpx;
}

.hint {
  text-align: left;
  font-size: 25rpx;
  color: #ccc;
  margin-top: 20rpx;
}
