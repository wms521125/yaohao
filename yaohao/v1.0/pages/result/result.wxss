/* pages/result/result.wxss */

.body {
  position: fixed;
  width: 100%;
  height: 100%;
  text-align: center;
  background: #39f;
  padding: 0 30rpx 64rpx;
  box-sizing: border-box;
}

.body-box {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
}

.dian {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 22rpx;
  color: #fff;
}

.headImg {
  width: 280rpx;
  height: 280rpx;
}

.success-title {
  font-size: 34rpx;
  color:#d0021b;
  line-height: 100rpx;
}

.success-table {
  width: 480rpx;
  /* height: 450rpx; */
  border: 2rpx solid #ccc;
  line-height: 72rpx;
  font-size: 32rpx;
  color: #2e3033;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.success-table-title {
   text-align: right; 
  width: 280rpx;
  padding-right: 10rpx;
  border-right: 2rpx solid #ccc;
  color: #8a9199;
}

.success-table-title view:nth-of-type(1),
.success-table-intro view:nth-of-type(1) {
  padding-top: 16rpx;
  box-sizing: border-box;
}

.success-table-title view:nth-last-of-type(1),
.success-table-intro view:nth-last-of-type(1){
  padding-bottom: 16rpx;
  box-sizing: border-box;
}

.success-table-intro {
  width: 100%;
  text-align: left;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.share {
  width: 480rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.30);
  border-radius: 200rpx;
  color: #fff;
  margin-top: 70rpx;
  padding-left: 70rpx;
  background: #39f url(http://i1.dd-img.com/assets/image/1520061117-dda414923be7ab75-40w-40h.png) no-repeat 144rpx;
  background-size: 36rpx;
  /* opacity: 0.2; */
}

.fail {
  background: #39f;
  padding: 0;
}
.failure-intro{
  font-size: 34rpx;
  color: #2e3033;
  line-height: 50rpx;
  margin: 20rpx 0 10rpx 0;
}
.failure-hint{
  font-size:28rpx;
  color:#8a9199;
}
button::after{
  border: none;
}

button[disabled]:not([type]){
  color: #fff;
  opacity: 0.2;
  background-color: #3399ff;
}

.none{
  display: none;
}